{{#with trip}}
<h1>{{title}}</h1>
<p>{{Address}}</p>
<p>{{Distance}}km</p>
<img src="{{Picture}}">
<div>{{Description}}</div>

<div id="longitude">{{location.coordinates.[1]}}</div>
<div id="latitude">{{location.coordinates.[0]}}</div>
<div id="detailMap" style='width: 400px; height: 300px;'></div>


<a href='/favorite/{{this._id}}'>Add to your favorite</a><br>
<a href='/'>Back to main page</a><br>

{{/with}}
